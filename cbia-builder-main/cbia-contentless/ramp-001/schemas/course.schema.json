{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CBIA Course Spec (legacy ssot-input/course.json)",
  "type": "object",
  "required": [
    "id",
    "title",
    "version",
    "modules"
  ],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "modules": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "title"
        ],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "title": {
            "type": "string"
          },
          "meta": {
            "type": "object"
          },
          "artifacts": {
            "type": "array"
          }
        },
        "additionalProperties": true
      },
      "minItems": 1
    }
  },
  "additionalProperties": true
}
