{
  "schema_version": "0.1.0",
  "node_types": [
    "authority",
    "objective",
    "phase",
    "artifact"
  ],
  "allowed_edges": [
    {
      "from": "artifact",
      "to": "objective"
    },
    {
      "from": "objective",
      "to": "authority"
    },
    {
      "from": "artifact",
      "to": "phase"
    },
    {
      "from": "phase",
      "to": "phase"
    }
  ],
  "closure_rules": [
    {
      "rule_id": "DCC-001",
      "description": "Every artifact must trace to authority via objectives",
      "must_reach": {
        "from": "artifact",
        "to": "authority"
      },
      "max_hops": 3
    }
  ]
}