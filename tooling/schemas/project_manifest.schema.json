{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CBIA Project Stage Manifest",
  "type": "object",
  "required": [
    "project",
    "stage",
    "provenance"
  ],
  "properties": {
    "project": {
      "type": "string"
    },
    "stage": {
      "type": "string",
      "enum": [
        "constraints",
        "syllabus",
        "schemas",
        "material"
      ]
    },
    "inputs": {
      "type": "object"
    },
    "outputs": {
      "type": "object"
    },
    "provenance": {
      "type": "object",
      "required": [
        "generated_by",
        "generated_on"
      ],
      "properties": {
        "constraints_commit": {
          "type": [
            "string",
            "null"
          ]
        },
        "schemas_commit": {
          "type": [
            "string",
            "null"
          ]
        },
        "material_commit": {
          "type": [
            "string",
            "null"
          ]
        },
        "generated_by": {
          "type": "string"
        },
        "generated_on": {
          "type": "string"
        }
      },
      "additionalProperties": true
    },
    "notes": {
      "type": "string"
    },
    "references": {
      "type": "object"
    }
  },
  "additionalProperties": true
}
